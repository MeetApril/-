@import "./image/font/iconfont.wxss";

.calendar {
  width: 100%;
  height: 200rpx;
  background: #ffffff;
  border-radius: 20rpx;
  margin-top: 20rpx;
}

.cale-title {
  text-align: center;
  padding: 20rpx 0;
}

.cale-content-box {
  width: 100%;
  background: #fff;
}

.cale-content-week {
  display: flex;
}

.cale-content-week .week-list {
  width: calc(100% / 7);
  text-align: center;
  font-size: 26rpx;
  color: #666;
  margin-top: 20rpx;
}

.cale-time {
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  color: #333;
  margin-top: 20rpx;
  min-height: 45rpx;
  line-height: 45rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
  position: relative;
}

.iconfont {
  color: #999;
}

.left,
.right {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}

.left {
  left: 30rpx;
}

.right {
  right: 30rpx;
}

.cale-box {
  width: 100%;
  height: 640rpx;
  transition: all .5s;
  overflow: hidden;
}

.cale-content-day {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 0;
  background: #fff;
}

.cale-content-day .day-list {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  width: calc(100% / 7);
  text-align: center;
  font-size: 26rpx;
  color: #666;
  min-height: 95rpx;
  border-radius: 8rpx;
}

.not-this-month {
  color: #999 !important;
}

.choseMonth {
  background: red;
}

.is-width {
  width: 100%;
}

.list-title {
  font-size: 23rpx;
}

.hovericonfont {
  color: #fff;
}

.is-zoom {
  text-align: center;
  padding-bottom: 20rpx;
}